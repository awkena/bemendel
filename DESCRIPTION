Package: bemendel
Type: Package
Title: Practice Mendelian Genetics in R
Version: 0.0.0.9000
Authors@R: c(
  person("Alexander", "Wireko Kena", email = "alex.kena24@gmail.com", 
         role = c("aut", "cre")),
  person("Ebenezer", "Ogoe", email = "ebenezerogoe@gmail.com", 
